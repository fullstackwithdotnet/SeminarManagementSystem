@model IEnumerable<SeminarManagementSystem.Models.Seminar>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>All Seminars</h1>

<p>
    <a asp-action="Create">New Seminar</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Organizer.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Type.Type_Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Venue)
            </th>

            <th>
                @Html.DisplayNameFor(model => model.Seminar_Date)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Starting_Time)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Ending_Time)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.ActionLink(item.Name, "Index", "Attendees", new { id = item.Seminar_Id })
            </td>
            <td>
                @Html.ActionLink(item.Organizer.Name, "Edit", "Organizers", new { id = item.Organizer.Organizer_Id })
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Type.Type_Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Venue)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Seminar_Date)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Starting_Time)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Ending_Time)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Seminar_Id">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Seminar_Id">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Seminar_Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
