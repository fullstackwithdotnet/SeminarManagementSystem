@model SeminarManagementSystem.ViewModels.AddSeminarViewModel

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Create</h1>

<h4>Seminar</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="SelectedOrganizer" class="control-label"></label>
                <select asp-for="SelectedOrganizer" asp-items="Model.Organizers" class="form-control"></select>
                <span asp-validation-for="SelectedOrganizer" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="SelectedType" class="control-label"></label>
                <select asp-for="SelectedType" asp-items="Model.Types" class="form-control"></select>
                <span asp-validation-for="SelectedType" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Seminar.Name" class="control-label"></label>
                <input asp-for="Seminar.Name" class="form-control" />
                <span asp-validation-for="Seminar.Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Seminar.Venue" class="control-label"></label>
                <input asp-for="Seminar.Venue" class="form-control" />
                <span asp-validation-for="Seminar.Venue" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Seminar.Seminar_Date" class="control-label"></label>
                <input asp-for="Seminar.Seminar_Date" class="form-control" type="date" />
                <span asp-validation-for="Seminar.Seminar_Date" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Seminar.Starting_Time" class="control-label"></label>
                <input asp-for="Seminar.Starting_Time" class="form-control" type="time" />
                <span asp-validation-for="Seminar.Starting_Time" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Seminar.Ending_Time" class="control-label"></label>
                <input asp-for="Seminar.Ending_Time" class="form-control" type="time" />
                <span asp-validation-for="Seminar.Ending_Time" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
