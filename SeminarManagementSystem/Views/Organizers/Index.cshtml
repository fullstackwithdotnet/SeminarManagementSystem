@model IEnumerable<SeminarManagementSystem.Models.Organizer>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Organizers</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Address)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Fees)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Signing_Date)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Address)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Fees)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Signing_Date)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Organizer_Id">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Organizer_Id">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Organizer_Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
